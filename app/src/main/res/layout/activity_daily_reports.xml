<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DailyReports">


    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:title="Daily Report"
            app:titleTextColor="@color/white"/>

    </com.google.android.material.appbar.AppBarLayout>


    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Spinner
                android:layout_margin="5dp"
                style="@style/DropDown_PowerSpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/bu"/>


            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Date To"
                    android:layout_marginRight="25dp"/>

                <TextView
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="Date To"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <EditText
                    android:layout_marginRight="10dp"
                    android:backgroundTint="#D5E1ED"
                    android:background="@drawable/rounded"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:text="September 17, 2021"
                    android:drawableLeft="@drawable/icons8_calendar_1"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/purple_500"
                    android:textSize="15sp"/>

                <EditText
                    android:backgroundTint="#D5E1ED"
                    android:background="@drawable/rounded"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    tools:text="September 17, 2021"
                    android:drawableLeft="@drawable/icons8_calendar_1"
                    android:drawablePadding="5dp"
                    android:drawableTint="@color/purple_500"
                    android:textSize="15sp"/>


            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:src="@drawable/temperature"
                    android:layout_height="100dp"/>


                <TextView
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/material_blue_grey_90"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="36.0 \nAVG"
                    android:layout_marginRight="25dp"/>


                <View
                    android:layout_gravity="center"
                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black"/>

                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/colorPrimary"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="39.0 \nHighest"
                    android:layout_marginRight="25dp"/>

                <View
                    android:layout_gravity="center"
                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black"/>

                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/purple_500"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="33.3 \nLowest"
                    android:layout_marginRight="25dp"/>


            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/trucking"/>

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="999999"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>


                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/agency"/>

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="999999"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>


                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/visitor"/>

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="999999"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>


                </LinearLayout>

                <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/employee_img"/>

                    <TextView
                        android:textAlignment="center"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="999999"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:src="@drawable/ic_man"
                    android:layout_height="100dp"/>


                <TextView
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#3196eb"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="99999 \nPersons"
                    android:layout_marginRight="25dp"/>


                <View
                    android:layout_gravity="center"
                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black"/>

                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#3196eb"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="39.0 \nAVG Age"
                    android:layout_marginRight="25dp"/>

                <View
                    android:layout_gravity="center"
                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black"/>

                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#3196eb"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="99\nMax Age"
                    android:layout_marginRight="25dp"/>


            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:src="@drawable/ic_girl"
                    android:layout_height="100dp"/>


                <TextView
                    android:gravity="center"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FBC02D"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="99999 \nPersons"
                    android:layout_marginRight="25dp"/>


                <View
                    android:layout_gravity="center"
                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black"/>

                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FBC02D"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="39.0 \nAVG Age"
                    android:layout_marginRight="25dp"/>

                <View
                    android:layout_gravity="center"
                    android:layout_width="1dp"
                    android:layout_height="70dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black"/>

                <TextView
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginLeft="5dp"
                    android:textColor="#FBC02D"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="99\nMax Age"
                    android:layout_marginRight="25dp"/>


            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:drawablePadding="5dp"
                        android:gravity="center|left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weekly Person Entrance"
                        android:drawableLeft="@drawable/ic_bar_chart"/>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_marginLeft="5dp"
                            android:textColor="@color/gray_btn_bg_pressed_color"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Select Month"
                            android:layout_marginRight="11dp"/>

                        <TextView
                            android:layout_marginRight="11dp"
                            android:textColor="@color/gray_btn_bg_pressed_color"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:text="Select Week"/>


                    </LinearLayout>


                    <LinearLayout
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <Spinner
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"/>

                        <Spinner
                            android:layout_marginRight="10dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="40dp"/>


                    </LinearLayout>



                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_bar_chart"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:drawablePadding="5dp"
                        android:gravity="center|left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Daily People Entrance (By Province)"
                        android:drawableLeft="@drawable/ic_bar_chart"/>





                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_bar_chart"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:drawablePadding="5dp"
                        android:gravity="center|left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="% Entrance Group"
                        android:drawableLeft="@drawable/ic_graph"/>





                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_graph"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                app:cardElevation="4dp"
                app:cardCornerRadius="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:textStyle="bold"
                        android:textSize="19sp"
                        android:drawablePadding="5dp"
                        android:gravity="center|left"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="% Agency"
                        android:drawableLeft="@drawable/ic_graph"/>





                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_graph"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>





        </LinearLayout>

    </androidx.core.widget.NestedScrollView>





</LinearLayout>