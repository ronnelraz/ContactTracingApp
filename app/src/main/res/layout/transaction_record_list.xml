<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="10dp"
    app:cardMaxElevation="10dp"
    android:id="@+id/card">


    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/category"
                android:textColor="#2c3e50"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/work_type"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                tools:text="Category : {Type}"/>




            <TextView
                android:id="@+id/temp"
                android:textColor="#388E3C"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/temperature_icon"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="{00.0Â°C}"/>

            <TextView
                android:id="@+id/passed"
                android:textColor="#388E3C"
                android:textSize="16sp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                tools:text="Passed"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/icons8_ok_3"/>

        </LinearLayout>

        <TextView
            android:id="@+id/name"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#2c3e50"
            tools:text="Employee Name : {Employee Name}"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/icons8_male_user"/>

        <TextView
            android:id="@+id/company"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#2c3e50"
            tools:text="Company Name : {Company name}"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/icons8_department"/>

        <TextView
            android:id="@+id/date"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#2c3e50"
            tools:text="Date : {Today Scanned}"
            android:drawablePadding="5dp"
            android:drawableLeft="@drawable/icons8_event"/>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>