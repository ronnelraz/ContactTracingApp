<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.budiyev.android.codescanner.CodeScannerView
        android:id="@+id/scanner_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:autoFocusButtonColor="@color/button_text_color"
        app:autoFocusButtonVisible="true"
        app:flashButtonColor="@color/button_text_color"
        app:flashButtonVisible="true"
        app:frameColor="@color/button_text_color"
        app:frameCornersSize="100dp"
        app:frameCornersRadius="20dp"
        app:frameAspectRatioWidth="1"
        app:frameAspectRatioHeight="1"
        app:frameSize="0.75"
        app:frameThickness="10dp"
        app:maskColor="#77000000"/>
</FrameLayout>