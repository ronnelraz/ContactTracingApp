<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ContactTracingApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="picker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorAccent">@color/purple_500</item>
    </style>

    <style name="MonthPickerDialogStyle" >
        <item name="monthBgColor">@color/button_text_color</item>
        <item name="monthBgSelectedColor">#689F38</item>
        <item name="monthFontColorSelected">#FFFFFF</item>
        <item name="monthFontColorNormal">@color/material_blue_grey_90</item>
        <item name="monthFontColorDisabled">@color/material_blue_grey_90</item>

        <item name="headerBgColor">@color/purple_500</item>
        <item name="headerFontColorSelected">#fff</item>
        <item name="headerFontColorNormal">#85FFFFFF</item>
        <item name="headerTitleColor">#fff</item>

        <item name="dialogActionButtonColor">@color/purple_500</item>
    </style>
</resources>